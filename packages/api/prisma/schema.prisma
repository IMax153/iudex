datasource db {
  provider = "sqlite"
  url      = "sqlite:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Form {
  id        String      @id @default(cuid())
  fields    FormField[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model FormField {
  id        String        @id @default(cuid())
  name      String
  type      FormFieldType
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum FormFieldType {
  Date
  DateTime
  Number
  Select
  String
}