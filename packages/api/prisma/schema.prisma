datasource db {
  provider = "sqlite"
  url      = "sqlite:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Form {
  id        String      @id @default(cuid())
  fields    FormField[]
  owner     User
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model FormField {
  id        String    @id @default(cuid())
  name      String
  type      InputType
  form      Form
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model User {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String   @unique
  password       String
  forms          Form[]
  refreshTokenId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum InputType {
  Button
  Checkbox
  Color
  Date
  DateTimeLocal
  Email
  File
  Hidden
  Image
  Month
  Number
  Password
  Radio
  Range
  Reset
  Search
  Submit
  Tel
  Text
  Time
  Url
  Week
}