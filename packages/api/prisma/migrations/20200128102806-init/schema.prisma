datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Form {
  id        String      @id @default(cuid())
  fields    FormField[]
  owner     User
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model FormField {
  id        String        @id @default(cuid())
  name      String
  type      FormFieldType
  form      Form
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  forms     Form[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum FormFieldType {
  Date
  DateTime
  Number
  Select
  String
}